<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.wisecityllc.cookedapp.views.ClickableUserPortrait
        android:id="@+id/group_member_list_member_photo"
        android:background="@drawable/circle_shape"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/group_member_list_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Jose Hernandez (pending)"
        android:layout_toRightOf="@id/group_member_list_member_photo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/group_member_list_approve_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:background="#8ad9d2"
        android:textColor="@android:color/black"
        android:text="Approve"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/group_member_list_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:visibility="gone"/>

</RelativeLayout>
